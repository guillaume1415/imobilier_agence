<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <meta charset="UTF-8">
    <title>{% block title %}Agence Nancy{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/css/select2.min.css">
    {% block stylesheets %}{% endblock %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('home') }}">Agence Nancy</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'properties' %}active {% endif %}" href="{{ path('produit.index') }}">acheter</a>
                </li>

            </ul>
            {% if is_granted('ROLE_ADMIN') %}
             <ul class="navbar-nav ">
                 <li class="nav-item ">
                     <a class="nav-link {% if current_menu is defined and current_menu == 'admin' %}active {% endif %}" href="{{ path('admin.property.index') }}">admin</a>
                 </li>
                </ul>
            {% endif %}
            {% if app.user %}
                <ul class="navbar-nav">
                    <li class="navba-nav">
                        <a href="{{ path('logout') }}" class="nav-link">DÃ©connexion</a>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav">
                    <li class="navba-nav">
                        <a href="{{ path('login') }}" class="nav-link">Connexion</a>
                    </li>
                </ul>
            {% endif %}
        </div>
    </nav>
</head>
<body>
{% block body %}{% endblock %}

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/js/select2.min.js"></script>
<script>
    $('select').select2();
</script>
{% block javascripts %} {% endblock %}
</body>
</html>
