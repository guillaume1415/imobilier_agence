    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.description | nl2br }}</p>
        {{ property.surface }}m2 -
        {{ property.city }} ({{ property.postalCode }})
        <div class="text-primary" style="font-size: 2rem; font-weight: bold;">
            {{ property.formattedPrice }} Â£
        </div>
    </div>
</div>